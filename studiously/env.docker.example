# .env.docker.example
# Copy to ".env.docker" and fill credentials for docker-compose

# App
NODE_ENV=production
PORT=3000

# Database (compose uses service name "db" as host)
DATABASE_URL=postgres://studiously:studiously@db:5432/studiously

# JWT
# Generate 32 bytes base64: openssl rand -base64 32
JWT_CUSTOM_SECRET=
JWT_ACCESS_EXPIRES_IN=15m

# Mail (choose one)
MAILER_HOST=sandbox.smtp.mailtrap.io
MAILER_PORT=2525
MAILER_USER=
MAILER_PASSWORD=
